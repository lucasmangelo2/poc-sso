@model UserViewModel

<div class="toolbar-row">
    <button class="btn btn-info">
        <a asp-action="Index"
            asp-controller="User">
            Voltar
        </a>
    </button>
</div>

<partial name="_ValidationSummary" />

<form asp-route="Update">

    <input type="hidden" asp-for="Id" />

    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label asp-for="Username"></label>
                <input type="text"
                       class="form-control"
                       placeholder="Login"
                       asp-for="Username">
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input type="text"
                       class="form-control"
                       placeholder="Nome"
                       asp-for="Name">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input type="email"
                       class="form-control"
                       asp-for="Email"
                       placeholder="E-mail">
            </div>
        </div>
    </div>


    <button class="btn btn-success"
            type="submit"
            asp-action="Update"
            asp-controller="User">
        Salvar
    </button>
</form>