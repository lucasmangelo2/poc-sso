@model UserViewModel

<div class="toolbar-row">
    <a class="btn btn-secondary"
        asp-action="Index"
        asp-controller="User">
        Voltar
    </a>
</div>

<partial name="_ValidationSummary" />

<form asp-route="Insert">

    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label asp-for="Username"></label>
                <input type="text"
                       class="form-control"
                       autocomplete="off"
                       asp-for="Username">
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input type="text"
                       class="form-control"
                       asp-for="Name">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label asp-for="Password"></label>
                <input type="password"
                       class="form-control"
                       asp-for="Password"
                       autocomplete="off">
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input type="password"
                       class="form-control"
                       asp-for="ConfirmPassword"
                       autocomplete="off">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input type="email"
                       class="form-control"
                       asp-for="Email">
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                <label asp-for="Role"></label>
                @Html.DropDownListFor(model => model.Role,
                                      IdentityServer.SSO.SelectLists.RolesList.GetItems(),
                                      new { @class = "form-control", @required = true })
            </div>
        </div>
    </div>


    <button class="btn btn-success"
            type="submit"
            asp-action="Insert"
            asp-controller="User">
        Salvar
    </button>
</form>