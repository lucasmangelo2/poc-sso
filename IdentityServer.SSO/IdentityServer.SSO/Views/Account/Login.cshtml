@model IdentityServer.SSO.ViewModel.LoginViewModel

<div class="login-page">

    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-sm-6 center-col">
            <div class="card">
                <div class="card-header">
                    <h2>Login</h2>
                </div>

                <div class="card-body">
                    <form asp-route="Login">
                        <input type="hidden" asp-for="ReturnUrl" />

                        <div class="form-group">
                            <label asp-for="Username"></label>
                            <input class="form-control" placeholder="Login" asp-for="Username" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" class="form-control" placeholder="Senha" asp-for="Password" autocomplete="off">
                        </div>
                        
                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="RememberLogin">
                                <label class="form-check-label" asp-for="RememberLogin">
                                    Lembrar credenciais
                                </label>
                            </div>
                        </div>
                        <button class="btn btn-primary" name="button" value="login">Entrar</button>
                        <button class="btn btn-secondary" name="button" value="cancel">Cancelar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>